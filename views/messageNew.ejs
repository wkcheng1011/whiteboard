<%- include('_header'); %>
<link rel="stylesheet" href="/stylesheets/index.css">

<div class="col-md-12 rounded shadow p-4 w-100" style="height: 550px;">
<section>
    <h1>New Message</h1>
    <form method="POST">
        <div class="form-group">
            <label for="to">
                <i class="fa fa-user"></i> Recipient
            </label>
            <select id="to" name="to" class="form-control">
                <% for (const user of users) { %>
                    <option value="<%= user.id %>"><%= user.name %></option>
                <% } %>
            </select>
        </div>
        <!-- <div class="form-group">
            <label for="title">Title</label>
            <input id="title" name="title" class="form-control" type="text" required="required" />
        </div> -->
        <div class="form-group">
            <label for="content"><i class="fa fa-envelope"></i> Content</label>
            <textarea id="content" name="content" class="form-control" required="required"></textarea>
        </div>
        <button type="submit" role="button" class="btn btn-success w-100" value="Send" >
            <i class="fa fa-paper-plane"></i> Send
        </button>

    </form>
</section>
<p class="lead blockquote font-weight-bold mt-2" style="font-size: 14px;">Just Send It~</p>
<footer class="blockquote-footer text-right"><cite>Anyone</cite></footer>
</div>
<%- include("_footer"); %>
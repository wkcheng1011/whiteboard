<%- include('../_header'); %>

<section>
    You have a total of x tasks.
    <a href="/tasks/new" role="button" class="btn btn-success">New Task</a>
    
    <div class="table-responsive table-striped thead-dark">
        <table data-toggle="table" data-search="true" data-show-columns="true" data-virtual-scroll="true" class="table table-hover">
            <thead>
                <tr>
                    <th class="w-25" data-sortable="true">Name</th>
                    <th class="w-25" data-sortable="true">Due Date</th>
                    <th class="w-25" data-sortable="true">Average</th>
                    <th class="w-25" data-sortable="true">Action</th>
                </tr>
            </thead>
            <tbody>
                <% for (const task of tasks) { %>
                    <tr>
                        <td><%= task.name %></td>
                        <td><%= task.end %></td>
                        <td><%= (task.average * 10000 | 0) / 100 %>%</td>
                        <td>
                            <a role="button" href="/tasks/summary/<%= task.id %>" class="btn btn-info">Summary</a>
                            <a role="button" href="/tasks/delete/<%= task.id %>" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</section>

<%- include('../_footer'); %>